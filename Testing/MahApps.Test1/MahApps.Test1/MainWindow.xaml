<Controls:MetroWindow x:Class="MahApps.Test1.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Platengymnasiet"
                      Height="350"
                      Width="525" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
                      >


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" ></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0"> 
            <ListViewItem>
                <Button Name="btnGetInfo" FontWeight="Normal" FontFamily="Arial Unicode MS" Click="BtnGetInfoClick">Get Information</Button>
            </ListViewItem>
        </ListView>
        <TextBlock Grid.Column="1" TextAlignment="Center" FontWeight="Bold">Vad händer idag?</TextBlock>
        <TextBlock Grid.Column="1" Name="textBlock1" Margin="0 40 0 0" TextWrapping="Wrap"></TextBlock>
    </Grid>
    
    
</Controls:MetroWindow>
